<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:weightSum="1">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="cursive"
        android:textColor="@color/colorDefault"
        android:textSize="30sp"
        android:gravity="center_vertical"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/app_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:textColor="@color/colorDefault"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/dashboard_title"/>
        <Button
            android:id="@+id/side_panel_button"
            android:backgroundTint="@color/cardview_light_background"
            android:layout_width="65sp"
            android:layout_height="wrap_content"/>
    </FrameLayout>

    <Button
        android:id="@+id/browse_experience_button"
        android:text="@string/browse_message"
        android:textColor="@color/colorDefault"
        android:backgroundTint="@color/cardview_light_background"
        android:layout_weight="0.3  "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/manage_experiences_button"
        android:text="@string/manage_message"
        android:textColor="@color/colorDefault"
        android:backgroundTint="@color/cardview_light_background"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/create_experience_button"
        android:text="@string/create_message"
        android:textColor="@color/colorDefault"
        android:backgroundTint="@color/cardview_light_background"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>